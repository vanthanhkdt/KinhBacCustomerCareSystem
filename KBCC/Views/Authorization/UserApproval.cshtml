
@{
    ViewBag.Title = "UserApproval";
}

<link href="~/Content/authorization/user-mgr.css" rel="stylesheet" />

<div class="">
    <div class="page-title">
        <div class="title_left">
            <div class="breadcrumb flat">
                <a href="~/Home/Index">Trang chủ</a>
                <a href="~/Authorization/Index">Quản trị tài khoản</a>
                <a href="javascript:location.reload();" class="active">Phê duyệt người dùng</a>
            </div>
        </div>
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Tìm kiếm...">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button">Tìm</button>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Quản trị tài khoản <small>Quản lý phân quyền</small></h2>

                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>
                                    <a href="#">Settings 1</a>
                                </li>
                                <li>
                                    <a href="#">Settings 2</a>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <h2>Phê duyệt người dùng</h2>
                    <hr />
                    <div style="min-height:300px;">
                        <table class="table table-sm table-hover table-bordered" id="tbapp">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">GEN</th>
                                    <th scope="col">Họ tên</th>
                                    <th scope="col">Bộ phận</th>
                                    <th scope="col">Knox ID</th>
                                    <th scope="col">Thời gian đăng ký</th>
                                    <th scope="col">Nhà máy</th>
                                    <th scope="col">...</th>
                                </tr>
                            </thead>
                            <tbody id="tbBody"></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/Scripts/authorization/user-mgr.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            getRegisters($('#tbBody'));
        });
    </script>
}
